{
  "name": "flowed",
  "version": "1.7.2",
  "description": "A fast and reliable flow manager and task runner for Node.js",
  "keywords": [
    "flow",
    "engine",
    "task",
    "dependency",
    "flowframework",
    "task-manager",
    "task-runner",
    "flowengine",
    "flow-engine",
    "flow-execution"
  ],
  "author": "Daniel Duarte <danieldd.ar@gmail.com> (https://github.com/daniel-duarte)",
  "license": "MIT",
  "homepage": "https://daniel-duarte.github.io/flowed",
  "repository": "github:daniel-duarte/flowed",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "npm run build -- --watch",
    "start": "npm test",
    "test": "nyc mocha --require ts-node/register test/*.ts",
    "coverage": "nyc report",
    "coverage:send": "nyc report --reporter=text-lcov | coveralls",
    "posttest": "npm run lint",
    "lint": "tslint -p tsconfig.json -t verbose && tslint -p tsconfig.test.json -t verbose",
    "lint:fix": "tslint -p tsconfig.json -t verbose --fix && tslint -p tsconfig.test.json -t verbose --fix && prettier --write \"src/**/*.ts\" \"src/**/*.js\" && prettier --write \"test/**/*.ts\" \"test/**/*.js\"",
    "release:prepare": "./ops/updateSonarProps.sh && rm -rf ./dist ./node_modules package-lock.json && npm install && npm-consider install --test && npm run lint:fix && npm run build && npm test && git status",
    "eslint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "eslint:fix": "npm run eslint -- --fix"
  },
  "config": {
    "maxPackagesNumber": 350,
    "maxSizeBites": 52428800,
    "allowedLicenseTypes": [
      "permissive",
      "publicDomain",
      "uncategorized"
    ]
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "debug": "^4.1.1",
    "flowed-st": "^1.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@istanbuljs/nyc-config-typescript": "^1.0.0",
    "@types/chai": "^4.2.6",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.1",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-eslint-plugin": "^2.1.0",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-prettier": "^3.1.2",
    "mocha": "^6.2.1",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.4"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "reporter": [
      "text"
    ]
  }
}
